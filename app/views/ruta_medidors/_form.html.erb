<%= form_for(@ruta_medidor, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @ruta_medidor.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@ruta_medidor.errors.count, "error") %> prohibited this ruta_medidor from being saved:</h4>

      <ul>
      <% @ruta_medidor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :rutum_id, "Ruta", class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.collection_select :rutum_id, Rutum.all, :id, :to_s, {prompt: false}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :medidor_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.collection_select :medidor_id, Medidor.all, :id, :to_s, {prompt: false}, {:class => "form-control"} %>
    </div>
  </div>  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :value => "Guardar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
