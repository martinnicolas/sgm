<div class="page-header">
  <%= link_to new_ruta_medidor_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nueva ruta_medidor
  <% end %>
  <h4>Listado de ruta_medidors</h4>
</div>


  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Ruta</th>
        <th>Medidor</th>
        <th>&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @ruta_medidors) do |ruta_medidor| %>
        <td><%= ruta_medidor.rutum %></td>
        <td><%= ruta_medidor.medidor %></td>
        <td style="width: 100px;">
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              Acciones
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li><%= link_to 'Ver', ruta_medidor %></li>
              <li><%= link_to 'Editar', edit_ruta_medidor_path(ruta_medidor) %></li>
              <li><%= link_to 'Eliminar', ruta_medidor, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></li>
            </ul>          
          </div>
        </td>                
      <% end %>
    </tbody>
  </table>

