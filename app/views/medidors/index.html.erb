<div class="page-header">
  <%= link_to new_medidor_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo medidor
  <% end %>
  <h4>Listado de medidores</h4>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Número</th>
      <th>Nombre</th>
      <th>Novedades</th>
      <th>Novedades críticas</th>
      <th>Latitud</th>
      <th>Longitud</th>
      <th>Cliente</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @medidors.each do |medidor| %>
      <tr>
        <td><%= medidor.numero %></td>
        <td><%= medidor.nombre %></td>
        <td><%= medidor.novedades %></td>
        <td><%= medidor.novedades_criticas %></td>
        <td><%= medidor.latitud %></td>
        <td><%= medidor.longitud %></td>
        <td><%= medidor.cliente %></td>
        <td style="width: 100px;">
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              Acciones
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li><%= link_to 'Ver', medidor %></li>
              <li><%= link_to 'Editar', edit_medidor_path(medidor) %></li>
              <li><%= link_to 'Eliminar', medidor, method: :delete, data: { confirm: 'Estás seguro?' } %></li>
            </ul>          
          </div>
        </td>        
      </tr>
    <% end %>
  </tbody>
</table>