<% if notice != nil %>
<div class="alert alert-success"> 
    <p id="notice"><%= notice %></p>
</div>  
<% end %>

<div class="page-header"><h4>Listado de secciones</h4></div>

<ul class="nav nav-pills">
  <li role="presentation"><%= link_to 'Nueva sección', new_seccion_path %></li>
</ul>

<br>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Subestación</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @seccions.each do |seccion| %>
      <tr>
        <td><%= seccion.nombre %></td>
        <td><%= seccion.subestacion.to_s %></td>
        <td><%= link_to 'Ver', seccion %>
        <%= link_to 'Editar', edit_seccion_path(seccion) %>
        <%= link_to 'Eliminar', seccion, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
