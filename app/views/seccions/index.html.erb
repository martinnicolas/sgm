<div class="page-header">
  <%= link_to new_seccion_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nueva sección
  <% end %>
  <h4>Listado de secciones</h4>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Subestación</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @seccions.each do |seccion| %>
      <tr>
        <td><%= seccion.nombre %></td>
        <td><%= seccion.subestacion %></td>
        <td style="width: 100px;">
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              Acciones
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li><%= link_to 'Ver', seccion %></li>
              <li><%= link_to 'Editar', edit_seccion_path(seccion) %></li>
              <li><%= link_to 'Eliminar', seccion, method: :delete, data: { confirm: 'Estás seguro?' } %></li>
            </ul>          
          </div>
        </td>                
      </tr>
    <% end %>
  </tbody>
</table>
