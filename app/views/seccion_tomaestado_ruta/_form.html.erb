<%= form_for(@seccion_tomaestado_rutum, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @seccion_tomaestado_rutum.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@seccion_tomaestado_rutum.errors.count, "error") %> prohibited this seccion_tomaestado_rutum from being saved:</h4>

      <ul>
      <% @seccion_tomaestado_rutum.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :seccion_id, "Sección", class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.collection_select :seccion_id, Seccion.all, :id, :to_s, {prompt: false}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tomaestado_id, "Tomaestado", class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.collection_select :tomaestado_id, Tomaestado.all, :id, :to_s, {prompt: false}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rutum_id, "Ruta", class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
      <%= f.collection_select :rutum_id, Rutum.all, :id, :to_s, {prompt: false}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_inicio, "Fecha de inicio", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :fecha_inicio, :order => [:day, :month, :year], class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fecha_fin, "Fecha de finalización", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :fecha_fin, :order => [:day, :month, :year], class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit value: "Guardar", class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
