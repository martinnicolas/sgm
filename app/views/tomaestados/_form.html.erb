<%= form_for(@tomaestado, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @tomaestado.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@tomaestado.errors.count, "error") %> prohibited this tomaestado from being saved:</h4>
      <ul>
      <% @tomaestado.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :dni, "DNI", class: "col-sm-1 control-label" %>
    <div class="col-sm-2">
      <%= f.number_field :dni, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :apellido, class: "col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :apellido, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nombre, "Nombres", class: "col-sm-1 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :nombre, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_id, "Usuario", class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.collection_select :user_id, User.all, :id, :to_s, {prompt: false}, {:class => "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit value: "Guardar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
