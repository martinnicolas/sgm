<div class="page-header">
  <%= link_to new_tomaestado_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nueva tomaestado
  <% end %>
  <h4>Listado de tomaestados</h4>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>DNI</th>
      <th>Apellido</th>
      <th>Nombre</th>
      <th>Usuario</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @tomaestados.each do |tomaestado| %>
      <tr>
        <td><%= tomaestado.dni %></td>
        <td><%= tomaestado.apellido %></td>
        <td><%= tomaestado.nombre %></td>
        <td><%= tomaestado.user %></td>
        <td style="width: 100px;">
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              Acciones
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li><%= link_to 'Ver', tomaestado %></li>
              <li><%= link_to 'Editar', edit_tomaestado_path(tomaestado) %></li>
              <li><%= link_to 'Eliminar', tomaestado, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></li>
            </ul>          
          </div>
        </td>        
      </tr>
    <% end %>
  </tbody>
</table>