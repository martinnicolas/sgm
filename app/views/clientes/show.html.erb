<div class="page-header">
  <%= link_to clientes_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Volver
  <% end %>
  <%= link_to edit_cliente_path(@cliente), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h4>Cliente</h4>
</div>

<dl class="dl-horizontal">
  <dt>DNI:</dt>
  <dd><%= @cliente.dni %></dd>

  <dt>Apellido:</dt>
  <dd><%= @cliente.apellido %></dd>

  <dt>Nombre:</dt>
  <dd><%= @cliente.nombre %></dd>

  <dt>Telefono:</dt>
  <dd><%= @cliente.telefono %></dd>

  <dt>Email:</dt>
  <dd><%= @cliente.email %></dd>

  <dt>Domicilio:</dt>
  <dd><%= @cliente.domicilio %></dd>
</dl>
