<%= form_for(@cliente, html: {role: "form", class: "form-horizontal"}) do |f| %>
  <% if @cliente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cliente.errors.count, "error") %> prohibited this cliente from being saved:</h2>

      <ul>
      <% @cliente.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :dni, "DNI" %>
  <div class="form-group">
    <div class="col-lg-2">
      <%= f.number_field :dni, :class => "form-control" %>
