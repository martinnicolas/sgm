  <div class="form-group">
    <div class="col-lg-4">
      <%= f.text_field :apellido, :class => "form-control" %>
    </div>
  </div>
  <%= f.label :nombre %>
  <div class="form-group">
    <div class="col-lg-4">
      <%= f.text_field :nombre, :class => "form-control" %>
    </div>
  </div>
  <%= f.label :telefono %>
  <div class="form-group">
    <div class="col-lg-3">
      <%= f.text_field :telefono, :class => "form-control" %>
    </div>
  </div>
  <%= f.label :email %>
  <div class="form-group">
    <div class="col-lg-3">
      <%= f.text_field :email, :class => "form-control" %>
    </div>
  </div>
  <%= f.label :domicilio %>
  <div class="form-group">
    <div class="col-lg-5">
      <%= f.text_field :domicilio, :class => "form-control" %>
    </div>
  </div>
  <%= f.submit :value => "Guardar",  :class => "btn btn-primary" %>
