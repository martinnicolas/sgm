<div class="page-header"><h4>Listado de clientes</h4></div>

<ul class="nav nav-pills">
  <li role="presentation"><%= link_to 'Nuevo cliente', new_cliente_path %></li>
</ul>

<br/>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>DNI</th>
      <th>Apellido</th>
      <th>Nombre</th>
      <th>Teléfono</th>
      <th>Email</th>
      <th>Domicilio</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.dni %></td>
        <td><%= cliente.apellido %></td>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.telefono %></td>
        <td><%= cliente.email %></td>
        <td><%= cliente.domicilio %></td>
        <td style="width: 100px;">
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              Acciones
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li><%= link_to 'Ver', cliente %></li>
              <li><%= link_to 'Editar', edit_cliente_path(cliente) %></li>
              <li><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Estás seguro?' } %></li>
            </ul>          
          </div>
        </td>                
      </tr>
    <% end %>
  </tbody>
</table>
