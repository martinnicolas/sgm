<div class="page-header"><h4>Editar <%= resource_name.to_s.humanize %></h4></div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form", method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :class => "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Clave" %> <i>(no complete el campo si no desea cambiarlo)</i><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar clave" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Clave actual" %> <i>(necesitamos tu clave actual para confirmar los cambios)</i>
    <br />
    <%= f.password_field :current_password, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Guardar", :class => "btn btn-primary"%>
  </div>
<% end %>

<div class="page-header"><h4>Cancelar mi cuenta</h4></div>

<p>No estás conforme? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Estás seguro?" }, method: :delete, :class => "btn btn-primary" %></p>

<br/>

<ul class="nav nav-pills">
  <li role="presentation"><%= link_to "Volver", :back %></li>
</ul>
